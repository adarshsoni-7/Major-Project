<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%=process.env.CLOUD_ACCESS_TOKEN %>";
  const listings = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%=listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      alt="list-img"
      class="card-img-top show-img"
    />

    <div class="card-body">
      <p class="card-text">Owned by: <i><%= listing.owner.username %></i></p>
      <p><%=listing.description %></p>
      <p>&#8377; <%= listing.price.toLocaleString("en-IN")%> for 5 nights</p>
      <p><%=listing.location %></p>
      <p><%=listing.country %></p>
    </div>
  </div>
  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn mb-5"
      >Edit
    </a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
  <% } %>

  <hr />

  <div class="col-8 offset-3 mb-3">
    <% if(currUser) { %>
    <form
      method="POST"
      action="/listings/<%=listing._id%>/reviews"
      novalidate
      class="needs-validation"
      id="listingForm"
    >
      <div>
        <h5>Your Review</h5>
        <label for="rating" class="form-label">Rating</label>
      </div>
      <div class="mb-3 mt-3">
        <fieldset class="starability-fade">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="rating"
            value="1"
            checked
          />

          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <br />

      <div class="mb-3">
        <div class="form-floating">
          <textarea
            required
            name="comment"
            id="comment"
            class="form-control"
            placeholder="Leave a comment here"
            id="floatingTextarea2"
            style="height: 100px"
          ></textarea>
          <label for="floatingTextarea2 comment">Comments</label>
        </div>

        <div class="invalid-feedback">Comment should be filled</div>
        <div class="valid-feedback">Comment accepted</div>
      </div>

      <button class="btn btn-outline-dark sub-btn">Submit Review</button>
    </form>
    <% } %>
  </div>
  <% if(listing.reviews.length != 0) { %>
  <div class="row">
    <% for(review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">@ <%= review.author.username %></h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text">&#11088;<%= review.rating %></p>
        <p class="starability-result" data-rating="<%= review.rating %>"></p>
      </div>
      <% if(currUser) { %>
      <form
        method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review.id %>?_method=DELETE"
        class="mb-3 mt-2"
      >
        <button class="btn btn-sm btn-dark">Delete Review</button>
      </form>
      <% } %>
    </div>

    <% } %>
  </div>

  <p><b>All Reviews</b></p>
  <% } %>
  <div class="col-8 offset-2 mb-3">
    <h4>Where you'll be</h4>
    <div id="map"></div>
  </div>
</div>
<script src="/js/map.js"></script>
<script>
  (function () {
    "use strict";
    document
      .getElementById("listingForm")
      .addEventListener("submit", function (event) {
        if (!this.checkValidity()) {
          event.preventDefault(); // *Prevents form submission*
          event.stopPropagation();
        }
        this.classList.add("was-validated"); // Bootstrap validation styling
      });
  })();
</script>
<script src="/js/map.js"></script>
