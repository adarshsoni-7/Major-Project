<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h1 class="mb-3">Sign Up on <b>WanderLust</b></h1>
    <form
      method="POST"
      action="/signUp"
      class="needs-validation"
      id="listingForm"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          placeholder="Enter a username"
          required
        />
        <div class="valid-feedback">Username accepted</div>
        <div class="invalid-feedback">Username should be valid</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          placeholder="Enter a valid email"
          required
        />
        <div class="valid-feedback">Email accepted</div>
        <div class="invalid-feedback">Email should be valid</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Enter a valid password"
          required
        />
        <div class="valid-feedback">Password accepted</div>
        <div class="invalid-feedback">Password should be valid</div>
      </div>

      <button class="btn btn-outline-success sign-up-btn">Sign Up</button>
    </form>
  </div>
</div>

<script>
  (function () {
    "use strict";
    document
      .getElementById("listingForm")
      .addEventListener("submit", function (event) {
        if (!this.checkValidity()) {
          event.preventDefault(); // *Prevents form submission*
          event.stopPropagation();
        }
        this.classList.add("was-validated"); // Bootstrap validation styling
      });
  })();
</script>
